$(".thirdphase").empty().append("<%= escape_javascript(render :partial => "advertisements/third_phase", :locals => { :child_category => @child_category}) %>")
$("#third_phase_selection option:first").attr("selected", true);
$('form').on('click', '.add_fields',function(event) {
	var time,regexp;
    time = new Date().getTime();
    regexp = new RegExp($(this).data('id'), 'g');
    $(this).before($(this).data('fields').replace(regexp, time));
    $(this).before($('.photo_for_ad_'+time).trigger('click'));
    return event.preventDefault();
});