<% if !@child_category.nil? %>
<%= select "advertisement", "category_id", @child_category.map {|x| [x.name, x.id]}, {}, :multiple => false, :size => 15,:id => "second_phase_selection" %>
<% else %>
<%= select "advertisement", "category_id",['']%>
<% end %>
<script type="text/javascript">
$('#second_phase_selection').change(function(){
    $.get('/second_phase/'+$(this).val(),function(data){
        },"script");
    $('#step0Next').show();
   $('#step0Next').click(function(){
	if ($('#third_phase_selection').val() == null)
	{
		var status = "child"
		if ($('#advertisement_ids').val() == "")
		{
			var id = 0;
			
		}else{
			var id = $('#advertisement_ids').val();
		}
		$.get('/characteristics_list/'+$('#second_phase_selection').val()+'/'+status+'/'+id,function(data){
        },"script");
	}
	else
	{
		var status = "sub_child"
			if ($('#advertisement_ids').val() == "")
		{
			var id = 0;

		}else{
			var id = $('#advertisement_ids').val();
		}
		$.get('/characteristics_list/'+$('#third_phase_selection').val()+'/'+status+'/'+id,function(data){
        },"script");
	}

});
    $('#third_phase_selection').empty();
});
</script>