<h1 id="category_management" class="hide_selectbox">Category List</h1>
<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Category.all, :id, :name, :prompt => "Select" %>
    <!-- <%= f.select :parent_id, Category.all.collect {|x| [x.name, x.id]}, {}, :multiple => false, :size => 10 %> -->
  </div>
  
  <div class="field">
    <%= f.label :active_status %>
    <%= f.check_box :active_status %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
