<h1>Listing bids</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Confirmation token</th>
    <th>Confirmed at</th>
    <th>User</th>
    <th>Advertisement</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.price %></td>
    <td><%= bid.confirmation_token %></td>
    <td><%= bid.confirmed_at %></td>
    <td><%= bid.user %></td>
    <td><%= bid.advertisement %></td>
    <td><%= link_to 'Show', bid %></td>
    <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
    <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

